{
  "name": "claim-react-student-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "node-sass": "^7.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "dep": "depcruise --max-depth 2 --exclude 'node_modules' --output-type dot src | dot -T svg | tee dependencygraph.svg | depcruise-wrap-stream-in-html > index.html && browser-sync start --server --files './index.html'"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react-hooks/recommended",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error"
    },
    "parser": "babel-eslint"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-scss"
    ],
    "rules": {
      "declaration-colon-newline-after": null,
      "number-leading-zero": null,
      "order/order": [
        "custom-properties",
        "declarations"
      ],
      "order/properties-order": [
        "width",
        "height"
      ],
      "order/properties-alphabetical-order": true,
      "scss/at-import-no-partial-leading-underscore": null,
      "string-quotes": "double",
      "value-list-comma-newline-after": null
    }
  },
  "browserslist": {
    "production": [
      "defaults",
      "not IE 11",
      "not IE_Mob 11",
      "maintained node versions"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "bulma": "^0.9.0",
    "dependency-cruiser": "^9.9.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.1",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0"
  }
}
